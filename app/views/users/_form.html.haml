= form_for @user do |f|
  - if @user.errors.any?
    #error_explanation
      %h2= "#{pluralize(@user.errors.count, "error")} prohibited this user from being saved:"
      %ul
        - @user.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :username
    = f.text_field :username
  .field
    = f.label :number
    = f.text_field :number
  .field
    = f.label :msg
    = f.text_area :msg
  .field
    = f.label :contact
    = f.check_box :contact
  .actions
    = f.submit 'Save'
